// Injects /partials/nav.html and highlights the active page
(function () {
  const NAV_PATH = 'partials/nav.html';
  const ACTIVE_CLASS = 'is-active';
  const ACTIVE_ARIA = 'page';

  const normalize = (p) => {
    if (p.endsWith('/')) return 'index.html';
    const f = p.split('/').pop();
    return f || 'index.html';
  };

  const highlight = (root) => {
    const current = normalize(location.pathname);
    root.querySelectorAll('a[href]').forEach(a => {
      const file = normalize(a.getAttribute('href'));
      if (file === current) {
        a.classList.add(ACTIVE_CLASS);
        a.setAttribute('aria-current', ACTIVE_ARIA);
      }
    });
  };

  const load = async () => {
    const mount = document.getElementById('site-nav');
    if (!mount) return;
    try {
      const res = await fetch(NAV_PATH, { cache: 'no-cache' });
      if (!res.ok) throw new Error('nav load failed');
      mount.innerHTML = await res.text();
      highlight(mount);
    } catch (e) {
      mount.innerHTML = `
        <ul class="nav-list">
          <li><a href="index.html">Home</a></li>
          <li><a href="service-workers.html">Service Workers</a></li>
          <li><a href="web-app-manifest.html">Web App Manifest</a></li>
          <li><a href="key-concepts.html">Key Concepts</a></li>
          <li><a href="references.html">References</a></li>
          <li><a href="about.html">About</a></li>
          <li><a href="quiz.html">Quiz</a></li>
        </ul>`;
      highlight(mount);
      console.warn(e);
    }
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', load);
  } else {
    load();
  }
})();
