  <script>
    (function () {
      const key = {
        q1: { type: "text", answers: ["service worker","service-worker","serviceworker"], pts: 2 },
        q2: { type: "single", answer: "c", pts: 2, correctText: "manifest.json" },
        q3: { type: "single", answer: "b", pts: 2, correctText: "install" },
        q4: { type: "single", answer: "b", pts: 2, correctText: "Apple Mobile Web App meta tags" },
        q5: { type: "multi", answers: new Set(["a","b","d"]), pts: 4 }
      };
      const PASS = 0.8;

      const form = document.getElementById('quizForm');
      const resultsEl = document.getElementById('results');
      const resetBtn = document.getElementById('resetBtn');

      const normalize = v => (v||'').toString().trim().toLowerCase();

      function grade(){
        let earned = 0;
        const total = Object.values(key).reduce((s,k)=>s+k.pts,0);
        const per = [];

        const q1El = document.getElementById('q1');
        const q1User = normalize(q1El.value).replace(/\s+/g,' ');
        const q1Ok = key.q1.answers.includes(q1User);
        if(q1Ok) earned += key.q1.pts;
        per.push({num:1,title:'Fill in the blank',correct:q1Ok,user:q1El.value,correctAns:'service worker'});

        const fd = new FormData(form);
        const q2 = (fd.get('q2')||'').toString();
        const q2Ok = q2 === key.q2.answer; if(q2Ok) earned += key.q2.pts;
        per.push({num:2,title:'Manifest file',correct:q2Ok,user:{a:'index.html',b:'service-worker.js',c:'manifest.json',d:'robots.txt'}[q2]||'',correctAns:key.q2.correctText});

        const q3 = (fd.get('q3')||'').toString();
        const q3Ok = q3 === key.q3.answer; if(q3Ok) earned += key.q3.pts;
        per.push({num:3,title:'Pre-caching lifecycle event',correct:q3Ok,user:{a:'fetch',b:'install',c:'activate',d:'message'}[q3]||'',correctAns:key.q3.correctText});

        const q4 = (fd.get('q4')||'').toString();
        const q4Ok = q4 === key.q4.answer; if(q4Ok) earned += key.q4.pts;
        per.push({num:4,title:'iOS home-screen behavior helpers',correct:q4Ok,user:{a:'Content-Security-Policy',b:'Apple Mobile Web App meta tags',c:'X-Frame-Options',d:'Accept-CH'}[q4]||'',correctAns:key.q4.correctText});

        const checked = new Set(Array.from(document.querySelectorAll('input[name="q5"]:checked')).map(el=>el.value));
        const q5Ok = checked.size===key.q5.answers.size && [...key.q5.answers].every(v=>checked.has(v));
        if(q5Ok) earned += key.q5.pts;
        const q5Map = {a:"Offline availability", b:"Faster repeat visits", c:"Guaranteed real-time data", d:"Reduced network usage"};
        const lab = set => [...set].map(v=>q5Map[v]).join(', ');
        per.push({num:5,title:'Benefits of caching strategy',correct:q5Ok,user:checked.size?lab(checked):'',correctAns:lab(key.q5.answers)});

        return {earned,total,per};
      }

      function render({earned,total,per}){
        const pct = Math.round((earned/total)*100);
        const pass = (earned/total)>=PASS;
        let html = `<h2>Results</h2>
          <p>Score: <strong class="${pass?'score-ok':'score-bad'}">${earned} / ${total} (${pct}%)</strong> — ${pass?'PASS':'FAIL'}</p>
          <div class="per-question">`;
        per.forEach(i=>{
          html += `<div class="question-result">
            <p><span class="badge ${i.correct?'correct':'incorrect'}">${i.correct?'Correct':'Incorrect'}</span>
            <strong>Q${i.num}.</strong> ${i.title}</p>
            <p><em>Your answer:</em> ${i.user || '<span style="opacity:.7">[no answer]</span>'}</p>
            ${i.correct ? '' : `<p><em>Correct answer:</em> ${i.correctAns}</p>`}
            <hr />
          </div>`;
        });
        html += `</div>`;
        resultsEl.innerHTML = html;
        resultsEl.hidden = false;
      }

      form.addEventListener('submit', e=>{
        e.preventDefault();
        render(grade());
      });

      resetBtn.addEventListener('click', ()=>{
        form.reset();
        resultsEl.hidden = true;
        resultsEl.innerHTML = '';
        document.getElementById('q1').focus();
      });
    })();
  </script>

  <script src="assets/nav.js" defer></script>
</body>
</html>
